FROM amd64/alpine:3.21@sha256:9a64a732c12ebe63a5b85832ea1b032bd7c4fde32ff89af7897d3e3fc334f33e
RUN apk add --no-cache ca-certificates mailcap

EXPOSE 8080 8081
VOLUME ["/var/lib/errors"]
ENTRYPOINT ["/usr/bin/errors"]
CMD ["server"]
HEALTHCHECK CMD /usr/bin/errors health

COPY bin/errors /usr/bin/errors
