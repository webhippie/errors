[Unit]
Description=Errors
Documentation=https://webhippie.github.io/errors/

Requires=network.target
After=network.target

[Service]
Type=simple
User=errors
Group=errors
EnvironmentFile=-/etc/default/errors
EnvironmentFile=-/etc/sysconfig/errors
ExecStart=/usr/bin/errors server $ERRORS_ARGS
WorkingDirectory=/var/lib/errors
Restart=always
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
